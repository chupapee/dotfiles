[bar/main-bar]
width = 100%
height = 15
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1.5
line-color = #f00

border-size = 8
border-color = ${colors.background}

module-margin-left = 1
module-margin-right = 0

font-0 = "Fira Code Nerd Font:pixelsize=10;1"
font-1 = "Fira Code Nerd Font:fontformat=truetype:size=8:antialias=false;0"
font-2 = "Fira Code Nerd Font:pixelsize=10;1"

modules-left = i3
modules-center = xwindow
modules-right = battery brightnessctl pulseaudio xkeyboard date

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-padding = 10

[module/i3]
type = internal/i3

ws-icon-0 = 1;1: 
ws-icon-1 = 2;2: 󰅩
ws-icon-2 = 3;3: 
ws-icon-3 = 4;4
ws-icon-4 = 5;5
